rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can read and write their own flights
    // Admin can read all flights (any authenticated user can read all for admin dashboard)
    match /flights/{flightId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    // Users can read and update their own notifications
    // Cloud Functions can create notifications for users (bypasses rules with admin SDK)
    match /notifications/{notificationId} {
      // Allow read/list if user is authenticated and notification belongs to them
      // Firestore will verify that queries only return documents where userId matches
      allow read, list: if request.auth != null && resource.data.userId == request.auth.uid;
      // Allow create if user is creating notification for themselves (Cloud Functions bypass rules)
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // Allow update/delete if notification belongs to user
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}